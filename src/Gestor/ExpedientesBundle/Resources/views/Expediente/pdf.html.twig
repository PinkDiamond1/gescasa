<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <link href="{{ app.request.scheme ~'://' ~ app.request.httpHost ~ asset('bundles/expedientes/css/impresion.css') }}" rel="stylesheet" type="text/css" />
    </head>
    <body>
        
        <div class="centrado">
            <label id="encabezado"> 
                GESTOR DE EXPEDIENTES: GESCASA - {{ "now"|date("Y") }} -
            </label>
        
                <div class="interlineas"></div>
        
            <label id="titulo">{{ expediente.titulo|default('') }}</label> <br/>
            <label id="referencia">( Ref.: {{ expediente.referencia|default('') }})</label> <br/>
        </div>
                
        <label class="etiqueta">ESTADO:</label><label> {{ expediente.estado|default('') }}</label><div class="interlineas_min"></div>
        <label class="etiqueta">EMPRESA:</label><label> {{ expediente.empresa|default('') }}</label><div class="interlineas_min"></div>
        <label class="etiqueta">ADJUDICATARIO:</label><label> {{ expediente.adjudicatario|default('') }}</label><div class="interlineas_min"></div>
        <label class="etiqueta">F. DE INICIO:</label><label> {{ expediente.fechaInicio|date("d/m/Y")|default('') }}</label><div class="interlineas_min"></div>
        <label class="etiqueta">F. DE CIERRE:</label><label> {{ expediente.fechaFin|date("d/m/Y")|default('') }}</label><div class="interlineas_min"></div>
        <label class="etiqueta">IMPORTE:</label><label>{{ expediente.importe|number_format(3, ',', '.')|default('') }} €</label><div class="interlineas_min"></div>
           
        <div class="centrado"><label>DESCRIPCIÓN:</label></div>
        <label class="descripcion">{{ expediente.descripcion0|default('') }}</label><div class="interlineas"></div>
        <label class="descripcion">{{ expediente.descripcion1|default('') }}</label><div class="interlineas"></div>
        <label class="descripcion">{{ expediente.descripcion2|default('') }}</label><div class="interlineas"></div><div class="interlineas"/>

        <div class="centrado"><label>MATERIALES:</label></div>
        
 {% if informatica %}
            <section class="listado_materiales">
                <div class="expedientes_info">Material informático del expediente</div>
                {% for material in informatica %}
                    <table class="tabla_datos_material_informatico">
                         {% if loop.index is even %}
                                <tbody class="fila_par">
                         {% else %}
                                <tbody class="fila_impar">
                         {% endif %}
                                    <tr><td><label>Tipo:</label> {{ material.tipo }}</td></tr>
                                    <tr><td><label>Marca:</label> {{material.marca }}</td></tr>
                                    <tr><td><label>Modelo:</label> {{ material.modelo }}</td></tr>
                                    <tr><td><label>N. Serie:</label> {{ material.numserie|default('') }}</td></tr>
                                    <tr><td><label>Caracteristicas:</label> {{material.caracteristicas|default('')}}</td></tr>
                                    <tr><td><label>Descripción:</label> {{material.descripcion|default('')}}</td></tr>       
                                    <tr><td><label>Destino:</label> {{material.destino|default('')}}</td></tr>
                                    <tr><td><label>Cantidad:</label> {{material.cantidad|default('')}}</td></tr>
                                    <tr><td><label>Observaciones:</label> {{material.observaciones|default('')}}</td></tr>
                        </tbody>
                    </table>
               {% endfor %}
            </section>
 {% endif %}
        
        
        
        
        </body>
    </html>
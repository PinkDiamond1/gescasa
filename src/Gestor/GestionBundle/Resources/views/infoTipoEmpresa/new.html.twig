{% extends 'GestionBundle:Default:index.html.twig' %}
{% form_theme formulario 'AdministracionBundle:Form:errores.html.twig' %}

{% block id 'empresa_new' %}
{% block title %}Añadir nueva empresa{% endblock %}

{% block contenido %}
    <h2>{{ block('title') }}</h2>
    <div class="limpiar"></div>
    
    <form action="{{ path('empresa_new') }}" method="post" {{ form_enctype(formulario) }} class="formulario_registro_usuario">
        {{ form_errors(formulario) }}
            
        <fieldset>            
            <legend>Datos de la empresa</legend>
            
            <div>
                {{ form_errors(formulario.descripcion) }}
                {{ form_label(formulario.descripcion)  }}                
                {{ form_widget(formulario.descripcion, { 'attr': { 'class': 'formulario_input_textarea' } }) }}
            </div>
            
        </fieldset>            
        {{ form_rest(formulario) }}
        <div class="contenedor_administrador_acciones">
            <ul class="administrador_acciones">
                <li>
                    <input class="boton" type="submit" value="Añadir" />
                </li>
                <li>
                    <input type="button" value="Cancelar" class="boton" onclick="window.location='{{ path('empresa_index') }}';"/>               
                </li>
            </ul>
        </div>
    </form>
{% endblock %}
